<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <JsonTemplateLayout eventTemplateUri="classpath:logging/basic-log.json" objectMessageAsJsonObject="true"/>
        </Console>

        <Console name="OperationLogs" target="SYSTEM_OUT">
            <JsonTemplateLayout eventTemplateUri="classpath:logging/operation-log.json"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>

        <Logger name="com.vaynerakawalo.springobservability.logging" level="info" additivity="false">
            <AppenderRef ref="OperationLogs"/>
        </Logger>
    </Loggers>
</Configuration>
